<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<context-param>
	    <param-name>webAppRootKey</param-name>
	    <param-value>ionosphere.root</param-value>
	</context-param>
	<!-- Log4j Configuration locations -->
	<context-param>
	    <param-name>log4jConfigLocation</param-name>
	    <param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
	    <param-name>log4jRefreshInterval</param-name>
	    <param-value>60000</param-value>
	</context-param>
	<servlet>
            <servlet-name>ionosphere</servlet-name>
            <servlet-class>org.nutz.mvc.NutServlet</servlet-class>
            <init-param>
                    <param-name>modules</param-name>
                    <param-value>cn.fam1452.action.MainModule</param-value>
            </init-param>
            <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
            <servlet-name>ionosphere</servlet-name>
            <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
    <!-- Druid内置监控界面 
    <servlet>
         <servlet-name>DruidStatView</servlet-name>
         <servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
          <servlet-name>DruidStatView</servlet-name>
          <url-pattern>/druid/*</url-pattern>
    </servlet-mapping> 
    -->
    
    <!--
    <filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>
			cn.fam1452.action.SetUTFCharacterEncoding
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	
    -->
   	<filter>
        <filter-name>msgs</filter-name>
        <filter-class>org.nutz.mvc.NutFilter</filter-class>
        <init-param>
	        <param-name>skip-mode</param-name>
	        <param-value>true</param-value>
    	</init-param>
	</filter>
	
	<filter-mapping>
	        <filter-name>msgs</filter-name>
	        <url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
	        <filter-name>msgs</filter-name>
	        <url-pattern>*.jspx</url-pattern>
	</filter-mapping>

  <welcome-file-list>
   <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>

